{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "ES2020",
	  "lib": ["ES2020"],
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "strict": true,
	  "noImplicitAny": true,
	  "preserveConstEnums": true,
	  "outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }